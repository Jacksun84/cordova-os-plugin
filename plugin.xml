<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova.zoom.plugin" version="1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ZoomPlugin</name>
    <js-module name="ZoomPlugin" src="www/ZoomPlugin.js">
        <clobbers target="cordova.plugins.ZoomPlugin" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="ZoomPlugin">
                <param name="android-package" value="cordova.zoom.plugin.ZoomPlugin" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/ZoomPlugin.java"
            target-dir="src/cordova/zoom/plugin/ZoomPlugin" />
    </platform>
</plugin>